
<style>

.announcement-link{
  margin: 0;
}
.announcement-bar a {
     
    text-align: center;
    text-decoration: none;
    display: flex;
    justify-content: center;
    margin-left: -20px;
   /* background-color: #152238;*/
   background-color: {{ section.settings.announcement_bar_color }}; 
}
  .announcement-bar {
    display: flex;
    justify-content: center;
    background-color: {{ section.settings.announcement_bar_color }};
    /*background-color: #152238; */
    text-align: center;
    text-decoration: none;
    
    
  }
  .announcement-bar__message {
   font-size: 12px;
    padding: 5px;
   /*color: white;*/
    color: {{ section.settings.announcement_bar_text_color }};
    text-transform: uppercase;
    
    
  }

@media screen and (min-width:250px) and (max-width: 700px){
  .announcement-bar__message{
    font-size: 10px;
    max-width: 20rem;
  }
}
  
  
</style>  

 
{% if section.settings.show_announcement %}
  {% if section.settings.home_page_only == false or template.name == 'index' %}

    {% if section.settings.link == blank %}
      
          <div class="announcement-bar z-20" id="announcement-bar" x-data="{announcementBarOpen: true}" x-cloak >
     
          <div x-show="announcementBarOpen">
       
              <button x-on:click="announcementBarOpen = false" type="button" class="px-1 py-1.5 absolute right-0"> 
                  {%render 'icon-close2'%}
              </button> 
                {% else %}
                  
                  <a href="{{ section.settings.link }}"class="announcement-bar announcement-link" >
                {% endif %}
                      
                    <p class="announcement-bar__message ">{{ section.settings.text | escape }}</p>
                    
            </div>
         </div>
      {% if section.settings.link == blank %}
           
          {% else %}
        <a>
      {% endif %}

  {% endif %}
{% endif %}

{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "home_page_only",
      "label": "Home page only",
      "default": true
    },
    {
      "type": "color",
      "id": "announcement_bar_color",
      "label": "Background color",
      "default": "#000000"
    },
	  {
      "type": "color",
      "id": "announcement_bar_text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Announcement text",
      "default": "Announce something here"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Announcement link"
    }
  ]
}
{% endschema %}