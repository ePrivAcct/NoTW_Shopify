<style>
    footer{
        background-color:#152238 ;
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 3rem;
       
       
        
    }
    .copyright{
       font-size: 12px;
    }

    .links ul{
        font-size: 12px;
        text-align: center;
    }

    

    @media screen and (min-width:350px) and (max-width: 700px){
        .links ul{
            display: block;
        }

        footer{
            height: 12rem;
           
        }
    }
</style>

<footer class="block md:flex items-center footer-section py-5 px-4  " >
  <div class="block md:flex justify-between item-center ">
    <div class="block md:flex justify-between items-center">

    {% for block in section.blocks %}
        {% assign item = block.settings %}
        {% if block.type == "link_list" %}
            <div class="block md:flex justify-between links text-xs items-center">
                <!-- <h5>{{ item.title }}</h5> -->
                {% assign footer_linklist = item.menu %}
                <ul class="list-none text-sm flex" >
                    {% for link in linklists[footer_linklist].links %}
                    <li>
                        <a href="{{ link.url }}" class="text-white ">{{ link.title | escape  }}</a>
                    </li>
                        
                    {% endfor %}

                        <div>
                    <p class="text-white text-xs copyright pt-2 text-center copyright">
            Copyright &copy; {{ "now" | date: "%Y" }}, {%comment%}{{
              shop.name | link_to: "/"
            }}{%endcomment%}NoTW<span class="font-extralight">&trade;</span>
          </p>

                </div>
                </ul>

            
            </div>

            {% else if block.type == block "text" %}
            <div class="col">
                <img src="{{ item.logo | img_url: 'medium' }}" alt="" class="mb-5" >
                <h5>{{ item.title }}</h5>
                <p>{{ item.description }}</p>
            </div>
        {% endif %}
    {% endfor %}

    </div>
  </div>


 </footer>



{% schema %}
    {
        "name": "Footer",
        "settings": [
            {
                "type": "range",
                "id": "col_num",
                "default": 3,
                "min": 1,
                "max": 4,
                "label": "Number of columns"
            }
        ],
        "max_blocks": 4,
        "blocks": [
            {
                "type": "link_list",
                "name": "Navigation",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title",
                        "default": "Quick Links"
                    },
                    {
                        "type": "link_list",
                        "id": "menu",
                        "label": "Menu"
                    }
                ]
            },
            {
                "type": "text",
                "name": "Store Details",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "logo",
                        "label": "Store Logo"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Heading",
                        "default": "Store Information"
                    },
                    {
                        "type": "richtext",
                        "id": "description",
                        "label": "Text"
                    }
                ]

            }
        ]
    }
{% endschema %}