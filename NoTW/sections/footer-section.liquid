<style>
    footer{
        background-color:#152238 ;
    }
</style>

<footer class="footer-section py-5 mt-5">
  <div class="container">
    <div class="grid grid-cols-3-{{ section.settings.col_num }}">

    {% for block in section.blocks %}
        {% assign item = block.settings %}
        {% if block.type == "link_list" %}
            <div class="col">
                <h5>{{ item.title }}</h5>
                {% assign footer_linklist = item.menu %}
                <ul class="list-none text-sm">
                    {% for link in linklists[footer_linklist].links %}
                    <li>
                        <a href="{{ link.url }}" class="text-white">{{ link.title | escape  }}</a>
                    </li>
                        
                    {% endfor %}
                </ul>
            </div>
            {% else if block.type == block "text" %}
            <div class="col">
                <img src="{{ item.logo | img_url: 'medium' }}" alt="" class="mb-5" >
                <h5>{{ item.title }}</h5>
                <p>{{ item.description }}</p>
            </div>
        {% endif %}
    {% endfor %}

    </div>
  </div>


 </footer>



{% schema %}
    {
        "name": "Footer",
        "settings": [
            {
                "type": "range",
                "id": "col_num",
                "default": 3,
                "min": 1,
                "max": 4,
                "label": "Number of columns"
            }
        ],
        "max_blocks": 4,
        "blocks": [
            {
                "type": "link_list",
                "name": "Navigation",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title",
                        "default": "Quick Links"
                    },
                    {
                        "type": "link_list",
                        "id": "menu",
                        "label": "Menu"
                    }
                ]
            },
            {
                "type": "text",
                "name": "Store Details",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "logo",
                        "label": "Store Logo"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Heading",
                        "default": "Store Information",
                    },
                    {
                        "type": "richtext",
                        "id": "description",
                        "label": "Text"
                    }
                ]

            }
        ]
    }
{% endschema %}