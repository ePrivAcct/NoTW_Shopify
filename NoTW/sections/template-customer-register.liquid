<style>
    .account-btn{
        background-color: #152238;
    }

   
</style>

<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h1 class="text-center text-2xl font-bold mt-6 my-8 uppercase">Register</h1>
        </div>
        <div class="mt-8">
            {% form 'create_customer' %}
                {% if form.errors %}
                    <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                        <strong class="font-bold uppercase">Error!</strong>
                        <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                    </div>
                {% endif %}

                <div class="my-2">
                    <label for="first_name" class="sr-only">First name</label>
                    <input 
                        type="text" 
                        name="customer[first_name]" 
                        id="first_name" 
                        autocomplete="given-name"
                        class="relative block w-full px-3 py-2 border placeholder:text-xs" 
                        placeholder="FIRST NAME"
                    >
                </div>

                <div class="my-2">
                    <label for="last_name" class="sr-only">Last name</label>
                    <input 
                        type="text" 
                        name="customer[last_name]" 
                        id="last_name" 
                        autocomplete="family-name"
                        class="relative block w-full px-3 py-2 border placeholder:text-xs" 
                        placeholder="LAST NAME"
                    >
                </div>

                <div class="my-2">
                    <label for="birthday" class="sr-only">D.O.B</label>
                    <input 
                        type="date" 
                        name="customer[note][Birthday]" 
                        id="birthday" 
                        class="relative block w-full px-3 py-2 border uppercase text-xs" 
                    >
                </div>

                <div class="my-2">
                    <label for="email_address" class="sr-only">Email address</label>
                    <input 
                        type="email" 
                        name="customer[email]" 
                        id="email_address" 
                        autocomplete="email"
                        class="relative block w-full px-3 py-2 border placeholder:text-xs" 
                        placeholder="EMAIL"
                    >
                </div>
                
                <div class="my-2">
                    <label for="password" class="sr-only">Password</label>
                    <input 
                        type="password" 
                        name="customer[password]" 
                        id="password" 
                        autocomplete="new-password"
                        class="relative block w-full px-3 py-2 border placeholder:text-xs" 
                        placeholder="PASSWORD"
                    >
                </div>
                
                <div>
                    <button type="submit"
                        class="account-btn relative w-full py-2 px-4 text-sm font-medium text-white hover:bg-gray-900 uppercase">
                        Create account
                    </button>
                </div>
            {% endform %}
            <div class="mt-2 text-xs">
                    <a href="{{routes.account_login_url}}" class="underline text-gray-500 hover:text-gray-900 uppercase">Back to sign in</a>
                </div>
        </div>
    </div>
</div>