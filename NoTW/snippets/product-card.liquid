<style>
    @media screen and (min-width:750px) and (max-width:1100px){
        .product-collection-title{
                max-width: 12em;
            }
    }
   

    @media screen and (max-width:1100px) {
        .product-img{
            width: 170px;
            height: 200px;
        }
    }

</style>

<div class="mx-auto py-2 px-1">
    <div class="bg-white overflow-hidden">
        <a href="{{ product_product.url }}">
            {% if product_product.featured_image %}
                <div class="overflow-hidden">
                    <img class="h-full object-cover transition duration-1000 ease-in-out hover:scale-105 transform product-img" src="{{ product_product.featured_image | img_url: 'large' }}" alt="{{ product_product.featured_image.alt }}">
                </div>

            {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'h-full mx-auto object-cover' }}
            {% endif %}
        </a>

        <div class="flex flex-col py-4 break-words">
            <!-- <span class="text-sm text-gray-400">{{ product_product.vendor }}</span> -->

            <a href="{{ product_product.url }}" class=" product-collection-title text-gray-700 uppercase flex flex-wrap font-medium ">{{ product_product.title }}</a>

            <p class="text-gray-500">{{ product_product.price | money }}</p>
        </div>

    </div>
</div>